<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout
        android:layout_height="47dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#dadcdc">
        <com.example.fifth.SuperButton
            android:id="@+id/finish"
            android:background="@drawable/back"
            android:layout_width="37dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textSize="22sp"
            android:text="设置"/>
    </LinearLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:text="安全等级"
        />
    <RadioGroup
        android:id="@+id/set_safety_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <RadioButton 
            android:id="@+id/safety_level_0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="level_0"/>
        <RadioButton 
            android:id="@+id/safety_level_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="level_1"/>
        <RadioButton 
            android:id="@+id/safety_level_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="level_2"/>"
    </RadioGroup>
</LinearLayout>
