<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="3dp"
    android:paddingBottom="9dp"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="22sp"
            />
        <TextView
            android:id="@+id/itemWordCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#50505A"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/itemCreateTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="13sp"
            android:textColor="#60606A"
            />
        <TextView 
            android:id="@+id/itemEditTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#60606A"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView 
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="3dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/tag_small"
            />
        <TextView 
            android:id="@+id/itemTags"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView 
        android:id="@+id/itemSummary"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#4A4A52"
        android:textSize="16sp"
        android:typeface="serif"
        />

</LinearLayout>
