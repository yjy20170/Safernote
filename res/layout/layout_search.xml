<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/layout_titlebar"/>"
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="搜索范围："
	    	android:textSize="18sp"/>
        <CheckBox 
            android:id="@+id/search_inTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"/>
        <CheckBox 
            android:id="@+id/search_inTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标签"/>
        <CheckBox 
            android:id="@+id/search_inContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"/>
    </LinearLayout>
	<TextView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
    	android:layout_marginLeft="3dp"
	    android:text="搜索内容（以 &quot;,&quot; 分隔）："
	    android:textSize="18sp"/>
	<EditText 
	    android:id="@+id/search_inputText"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="7dp"
	    android:layout_marginRight="5dp"
	    android:layout_marginTop="6dp"
	    android:padding="3dp"
	    android:background="#dadada"
	    />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建时间："
    	android:textSize="18sp"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="3dp"
	    android:layout_marginTop="10dp"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="不早于"
	    	android:textSize="18sp"/>
	    <TextView 
	        android:id="@+id/search_create_limitStartDate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	    	android:paddingLeft="7dp"
	    	android:paddingRight="7dp"
		    android:background="#dadada"
	    	android:textSize="17sp"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="13dp"
	        android:text="不晚于"
	    	android:textSize="18sp"/>
	    <TextView 
	        android:id="@+id/search_create_limitEndDate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	    	android:paddingLeft="7dp"
	    	android:paddingRight="7dp"
		    android:background="#dadada"
	    	android:textSize="17sp"/>
	</LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#707070"/>
    <ListView 
        android:id="@+id/itemListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>
</LinearLayout>
